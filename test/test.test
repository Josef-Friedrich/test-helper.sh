#! /bin/sh

test_simple() {
	. ../test-helper.sh
	mock_path /tmp123
	test -n "$(echo $PATH | grep /tmp123:)"
	assert_equals 0 $?
}

test_parent_mock_path() {
	. ../test-helper.sh
	PARENT_MOCK_PATH=/lol
	mock_path tmp1:tmp2:tmp3
	test -n "$(echo $PATH | grep /lol/tmp1:/lol/tmp2:/lol/tmp3:)"
	assert_equals 0 $?
}
