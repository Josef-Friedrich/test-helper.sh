#! /bin/sh

test_simple() {
	. ../test-helper.sh
	mock_path bin/bin1
	test -n "$(echo $PATH | grep bin/bin1:)"
	assert_equals 0 $?
}

test_simple_dash() {
	. ../test-helper.sh
	mock_path bin/bin1/
	test -n "$(echo $PATH | grep bin/bin1:)"
	assert_equals 0 $?
}

##
# PARENT_MOCK_PATH
##

test_parent() {
	. ../test-helper.sh
	PARENT_MOCK_PATH=/lol
	mock_path tmp1:tmp2:tmp3
	test -n "$(echo $PATH | grep /lol/tmp1:/lol/tmp2:/lol/tmp3:)"
	assert_equals 0 $?
}

test_parent_trailing_dashes() {
	. ../test-helper.sh
	PARENT_MOCK_PATH=/lol//
	mock_path tmp1//:tmp2///:tmp3//
	test -n "$(echo $PATH | grep /lol/tmp1:/lol/tmp2:/lol/tmp3:)"
	assert_equals 0 $?
}
