#! /bin/sh

test_simple() {
	. ../test-helper.sh
	mock_path bin/bin1
	test -n "$(echo $PATH | grep bin/bin1:)"
	assert_equals 0 $?
}

test_simple_dash() {
	. ../test-helper.sh
	mock_path bin/bin1/
	test -n "$(echo $PATH | grep bin/bin1:)"
	assert_equals 0 $?
}

##
# PARENT_MOCK_PATH
##

test_parent() {
	. ../test-helper.sh
	PARENT_MOCK_PATH=bin
	mock_path bin1:bin2:bin3
	test -n "$(echo $PATH | grep test/bin/bin1:/)"
	assert_equals 0 $?
	test -n "$(echo $PATH | grep test/bin/bin2:/)"
	assert_equals 0 $?
	test -n "$(echo $PATH | grep test/bin/bin3:/)"
	assert_equals 0 $?
}

test_parent_trailing_dashes() {
	. ../test-helper.sh
	PARENT_MOCK_PATH=$(pwd)/bin
	mock_path bin1//:bin2///:bin3//
	test -n "$(echo $PATH | grep test/bin/bin1:/)"
	assert_equals 0 $?
	test -n "$(echo $PATH | grep test/bin/bin2:/)"
	assert_equals 0 $?
	test -n "$(echo $PATH | grep test/bin/bin3:/)"
	assert_equals 0 $?
}
